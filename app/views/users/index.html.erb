<table>
    <% @users.each do |u| %>
      <tr>
          <td><%= link_to_if(can?(:read, User), "#{u.name}", user_path(u.id)) {} %></td>
          <td><%= "#{u.email}" %></td>
          <td><%= "#{u.roles.collect{|r| r.name}}" %></td>
          <td><%= link_to_if(can?(:edit, User), "Edit", edit_user_path(u.id)) {} %></td>
          <td>
              <i class="fa fa-trash-o">&nbsp;
              </i><%= link_to_if(can?(:delete, u), "Delete", u, :confirm => "Are you sure?", :method => :delete) {} %></td>

      </tr>
    <% end %>
</table>